<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="Tetris.GameOver" Height="214" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Game over" HorizontalAlignment="Left" Margin="71,10,0,0" VerticalAlignment="Top" Height="58" Width="193" FontSize="38" RenderTransformOrigin="0.702,0.5" Grid.ColumnSpan="2"/>
        <Label x:Name="scoreLabel" Content="Score: " HorizontalAlignment="Left" Margin="81,73,0,0" VerticalAlignment="Top" Height="25" Width="161" Grid.ColumnSpan="2"/>
        <Button x:Name="restartButton" Content="Restart" HorizontalAlignment="Left" Margin="71,119,0,0" VerticalAlignment="Top" Width="88" Height="31" Click="restartButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" Margin="46,119,0,0" VerticalAlignment="Top" Width="93" Height="31" Click="exitButton_Click" Grid.Column="1"/>

    </Grid>
</Window>
